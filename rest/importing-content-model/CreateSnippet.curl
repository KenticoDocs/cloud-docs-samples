# DocSection: importing_create_snippet
curl--request POST\
--url https: //manage.kontent.ai/v2/projects/<YOUR_PROJECT_ID>/snippets \
  --header 'Authorization: Bearer <YOUR_MANAGEMENT_API_KEY>'\
  --header 'Content-type: application/json'\
  --data ' {
"name": "Author",
"codename": "author",
"elements": [{
    "name": "Name",
    "codename": "name",
    "type": "text"
  },
  {
    "name": "Profile picture",
    "codename": "profile_picture",
    "type": "asset"
  }
]}'
# EndDocSection
